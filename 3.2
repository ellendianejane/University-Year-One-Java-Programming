class Main
{
    public static void main(String args[])
    {
        boolean loop = false;
        
        while(loop == false)
        {
            System.out.println("#Please enter a word");
            String word = BIO.getString();
            int vowel = 0;
            if(word.equals("END"))
            {
                loop = true;
                break;
            }
            for(int i = 0; i < word.length(); i++)
            {
                if(word.charAt(i) == 'a' || word.charAt(i) == 'A' || word.charAt(i) == 'e' || word.charAt(i) == 'E' || word.charAt(i) == 'i' || word.charAt(i) == 'I' || word.charAt(i) == 'o' || word.charAt(i) == 'O' || word.charAt(i) == 'u' || word.charAt(i) == 'U')
                {
                    vowel = vowel + 1;
                }
            }
            System.out.println("[   "+vowel+"] vowels in \""+word+"\"");
        }
    }
}
